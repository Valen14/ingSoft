<p id="notice"><%= notice %></p>

<h4>Posts</h4>

<br>

<div class="row">
<% @posts.each do |post| %>
<div class="card">
  <div class="col s3">
    <div class="thumbnail">
      <%= image_tag "tbnail.jpg"%>
      <div class="caption">
        <h3><%= post.title %></h3>
        <p><%= truncate( post.description, lenght: "20", separator: ' ') %></p>
        <p><%= link_to "Ver mas", achievements_path, class: 'btn waves-effect waves-light teal orange' %></p>
      </div>
    </div>
  </div>
</div>

<% end %>

</div>
<%= link_to 'New Post', new_post_path %>
