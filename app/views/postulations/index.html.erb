<p id="notice"><%= notice %></p>

<h1>Postulations</h1>

<table>
  <thead>
    <tr>
      <th>Id user</th>
      <th>Id gauchada</th>
      <th>Estimate date</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @postulations.each do |postulation| %>
      <tr>
        <td><%= postulation.user_id %></td>
        <td><%= postulation.post_id %></td>
        <td><%= postulation.estimate_date %></td>
        <td><%= postulation.description %></td>
        <td><%= link_to 'Show', postulation %></td>
        <td><%= link_to 'Edit', edit_postulation_path(postulation) %></td>
        <td><%= link_to 'Destroy', postulation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

