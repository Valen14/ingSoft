<div align="center" class="container" >

<div class="col s12 z-depth-4 card-panel" style="display: inline-block; padding: 32px 48px 0px 48px; border: 1px solid #EEE;">
  <div class="row">
      <h5>Registrate</h5>
  </div>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

  <div class="input-field col s12">
    <%= f.label :email, class:"active" %>
    <%= f.email_field :email, autofocus: true, required: true  %>
  </div>

  <div class="input-field col s12">
    <%= f.label :password, class:"active" %>
    <%= f.password_field :password, autocomplete: "off", required: true  %>
    <% if @minimum_password_length %>
    <em>( minimo <%= @minimum_password_length %> caracteres )</em>
    <% end %>
  </div>

  <div class="input-field col s12">
    <%= f.label :password_confirmation, class:"active" %>
    <%= f.password_field :password_confirmation, autocomplete: "off", required: true  %>
  </div>

      <div class="input-field col s12">
    <%= f.label :name, class:"active" %>
    <%= f.text_field :name, required: true  %>
  </div>

      <div class="input-field col s12">
    <%= f.label :dni, class:"active" %>
    <%= f.number_field :dni, required: true  %>
  </div>


      <div class="input-field col s12">
    <%= f.label :phone, class:"active" %>
    <%= f.text_field :phone, required: true  %>
  </div>

<div class="row">
<div class="input-field col s12">

<%= f.label :"fecha de nacimiento"  %>
<%= f.date_field :birthdate, class: "birthdate", required: true   %>
</div>
</div>




  <div  class="row">
    <div class="input-field col s12">
    <%= f.submit "Crear", class: 'btn waves-effect waves-light teal orange' %>
    <%= link_to "Volver", posts_path, class: 'btn waves-effect waves-light teal orange' %>
    </div>
  </div>

<% end %>
</div>
</div>
