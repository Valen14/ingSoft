<div align="center" class="container">
	<p id="notice"><%= notice %></p>
  <div class="col s12 z-depth-4 card-panel" style="display: inline-block; padding: 32px 48px 0px 48px; border: 1px solid #EEE;">
    <div class="row">
       <h5>Entrar</h5>
    </div>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="input-field col s12">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true %>
      </div>

      <div class="input-field col s12">
        <%= f.label :ContraseÃ±a %><br />
        <%= f.password_field :password, autocomplete: "off" %>
      </div>

      <% if devise_mapping.rememberable? -%>
        <div align="left" class="input-field col s12 login-text">
          <input type="checkbox" id="remember_me" />
          <label for="remember_me">Recordarme</label><br /><br />
        </div>
      <% end -%>

      <div  class="row">
        <div class="input-field col s12">
        <%= f.submit "Entrar", class: 'btn waves-effect waves-light teal orange' %>
        <%= link_to "Volver", posts_path, class: 'btn waves-effect waves-light teal orange' %>
        </div>
      </div>

    <% end %>

    <div class="row">
      <%= render "users/shared/links" %>
    </div>
  </div>
</div>
